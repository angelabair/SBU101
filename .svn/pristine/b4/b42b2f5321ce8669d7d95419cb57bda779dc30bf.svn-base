//# Block Helpers

// ## Width Float Right 
// Usually used on figures and sidenotes.

.width-full {
	display: block;
	clear: both;
    margin: 1em 0;
}
.width-half-right {
	@include width-half-right;
}
.width-40-right {
	@extend .width-half-right;
	max-width: 40%;
}
.width-35-right {
	@extend .width-half-right;
	max-width: 35%;
}
.width-30-right {
	@extend .width-half-right;
	max-width: 30%;
}

// ## Width Center
// Ususally used on figures that are very long and would be too big at full width.

.width-center {
    @include width-center;
}
.width-65-center {
    @extend .width-center;
    max-width: 65%;
}
.width-60-center {
    @extend .width-center;
    max-width: 60%;
}
.width-55-center {
    @extend .width-center;
    max-width: 55%;
}

// ## Margin Helpers
// For creating additional spacing

.mt0 {
    margin-top: 0 !important;
}
.mt1 {
    margin-top: 1em !important;
}
.mt2 {
    margin-top: 2em !important;
}
.mb0 {
    margin-bottom: 0 !important;
}
.mb1 {
    margin-bottom: 1em !important;
}
.mb2 {
    margin-bottom: 2em !important;
}
.ml0 {
    margin-left: 0 !important;
}
.ml1 {
    margin-left: 1em !important;
}
.ml2 {
    margin-left: 2em !important;
}
.mr0 {
    margin-right: 0 !important;
}
.mr1 {
    margin-right: 1em !important;
}
.mr2 {
    margin-right: 2em !important;
}